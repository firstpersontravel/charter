<div class="pure-g">
  <div class="pure-u-1-6"></div>
  <div class="pure-u-2-3">

    <p>
      Environment: {{environment.environmentName}}<br/>
      API Host: {{environment.apiHost}}<br/>
      Build: {{buildTimestamp}}
    </p>

    <form class='pure-form pure-g'>
      <select class='pure-input-1' onchange={{action "updateEnvironment" value="target.value"}}>
        {{#each environmentOptions as |environmentOption|}}
          <option
            value='{{environmentOption.name}}'
            selected={{environmentOption.isSelected}}>
            {{environmentOption.name}}
          </option>
        {{/each}}
      </select>
    </form>

    <h2>Login</h2>

    <p>
      <button class="pure-button pure-button-primary pure-button-block" {{action "signin" "tablet1@dummy.email"}}>Tablet 1</button>
    </p>

    <p>
      <button class="pure-button pure-button-primary pure-button-block" {{action "signin" "tablet2@dummy.email"}}>Tablet 2</button>
    </p>

    <p>
      <button class="pure-button pure-button-primary pure-button-block" {{action "signin" "tablet3@dummy.email"}}>Tablet 3</button>
    </p>

    <form class="pure-form pure-g">
      {{input type="email" name="email" placeholder="Email" value=emailInput class='pure-input-2-3'}}

      <button type="submit" class="pure-button pure-button-secondary pure-u-1-3" {{action "signin"}}>Sign in</button>
    </form>

    {{#if environment.isNative}}
    <br />
    <br />
    <br />

    <p>
      <button class="pure-button pure-button-block" {{action "updateCode" "staging"}}>Update code to staging</button>
    </p>
    <p>
      <button class="pure-button pure-button-block" {{action "updateCode" "production"}}>Update code to production</button>
    </p>
    {{/if}}

  </div>
  <div class="pure-u-1-6"></div>
</div>
