{
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": 0
  },
  "globals": {
    "it": true,
    "describe": true,
    "beforeEach": true,
    "before": true,
    "afterEach": true,
    "module": true
  }
}
